@require './global.styl'

body
  margin 0
  padding 0
  font-family sans-serif
  background-color #e6e6e6

.App
  text-align center

.App-logo
  animation App-logo-spin infinite 20s linear
  height 80px

.App-header
  padding 0.2em
  .logo
    width 48px
    height 33px
    background-attachment fixed
    background-position center
    margin 0 auto
    background url("../images/logo-48x33.png")
  .App-title
    color titleBlue
    text-transform uppercase
    font-size 1.3em
    font-weight 700
    font-family "open sans condensed"
  .slogan
    color sloganBlue
    font-family "meera Inimai"
    font-size 0.9em
    position relative
    top -0.8em

.App-intro
  font-size large

.alphabet-menu-wrapper

  .horizontal-line
    width 100%
    height 1px
    margin 0 auto
    margin-top 0.2em
    background-color alphabetMenuHR
  .horizontal-scroller
    width 90%
    margin 0 auto
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow-x auto
    -webkit-overflow-scrolling touch
    -ms-overflow-style -ms-autohiding-scrollbar
    &::-webkit-scrollbar
      display none
  ul
    font-family "roboto slab"
    color alphabetLetter
    font-size 1.9em
    list-style-type none
    margin 0
    padding 0 // override browser default
    li
      padding 0 0.5em
      display inline
      &:hover
        cursor pointer
        color lighten(alphabetLetter,15)
