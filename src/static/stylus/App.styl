.App
  text-align center

.App-logo
  animation App-logo-spin infinite 20s linear
  height 80px

.App-header
  background-color #fff
  border 1px solid gainsboro
  height 150px
  padding 20px
  color white

.App-intro
  font-size large

.App-title
  color deeppink

@keyframes App-logo-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.barn, .chicken, .egg, .chick
  margin 0 auto
  margin-top 1em
  padding 0.5em 0.5em
  border 2px dashed silver
  width 80%
  font-size 1.1em
  color silver
  .chicken
    color cadetblue
    .egg
      color cornflowerblue
      .chick
        color lightsteelblue
