@require './global.styl'

body
  margin 0
  padding 0
  font-family sans-serif
  background-color #e6e6e6

.App
  text-align center

.App-logo
  animation App-logo-spin infinite 20s linear
  height 80px

.App-header
  padding 0.2em
  .logo
    width 48px
    height 33px
    background-attachment fixed
    background-position center
    margin 0 auto
    background url("../images/logo-48x33.png")
  .App-title
    color titleBlue
    text-transform uppercase
    font-size 1.3em
    font-weight 700
    font-family "open sans condensed"
  .slogan
    color sloganBlue
    font-family "meera Inimai"
    font-size 0.9em
    position relative
    top -0.8em

.App-intro
  font-size large

@keyframes App-logo-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)
